{
  "name": "excel-database-electron",
  "version": "0.1.0",
  "description": "Excel Database Electron App - Treat Excel workbooks as databases with CRUD operations",
  "author": "Shikhar Singh",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "renderer:dev": "vite",
    "renderer:build": "vite build",
    "start:dev": "RENDERER_DEV_URL=http://localhost:5173 concurrently \"npm:renderer:dev\" \"electron .\"",
    "test": "vitest",
    "start:prod": "electron .",
    "build": "electron-builder",
    "cleanup": "rm -rf node_modules dist archived_components/legacy_renderer/ui || true"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "node-fetch": "^3.3.2",
    "proper-lockfile": "^4.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-scrollbar": "^3.0.5",
    "tailwindcss": "^3.4.0",
    "tippy.js": "^6.3.7",
    "uuid": "^9.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^23.0.0",
    "jsdom": "20.0.0",
    "postcss": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.3",
    "vitest": "^1.4.0"
  }
}
